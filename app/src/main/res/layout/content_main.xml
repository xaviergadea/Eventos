<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".presentationlayer.activities.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dorsal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/main_tvDorsal"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_etDorsal"
        android:layout_below="@+id/main_tvDorsal"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:id="@+id/main_btBuscar"
        android:layout_alignBottom="@+id/main_etDorsal"
        android:layout_alignEnd="@+id/main_etDorsal"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_tvNombre"
        android:editable="false"
        android:textAlignment="center"
        android:textSize="25dp"
        android:layout_below="@+id/main_ibStartStop"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_ibStartStop"
        android:src="@drawable/start"
        android:background="@android:color/transparent"
        android:adjustViewBounds="false"
        android:visibility="invisible"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/main_etDorsal"
        android:layout_toStartOf="@+id/main_btBuscar" />

</RelativeLayout>
